{% schema %}
{
  "name": "Instagram Gallery",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Gallery"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Here are some of our featured images."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    }
  ],
  "presets": [
    {
      "name": "Instagram Gallery",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="image-gallery-section">
  <h2>{{ section.settings.section_title }}</h2>
  <p>{{ section.settings.section_description }}</p>
  
  <div class="gallery-images">
    {% if section.settings.image_1 %}
      <img src="{{ section.settings.image_1 | img_url: '300x' }}" alt="Image 1">
    {% endif %}
    {% if section.settings.image_2 %}
      <img src="{{ section.settings.image_2 | img_url: '300x' }}" alt="Image 2">
    {% endif %}
    {% if section.settings.image_3 %}
      <img src="{{ section.settings.image_3 | img_url: '300x' }}" alt="Image 3">
    {% endif %}
    {% if section.settings.image_4 %}
      <img src="{{ section.settings.image_4 | img_url: '300x' }}" alt="Image 4">
    {% endif %}
    {% if section.settings.image_5 %}
      <img src="{{ section.settings.image_5 | img_url: '300x' }}" alt="Image 5">
    {% endif %}
  </div>
</div>

<style>
  .image-gallery-section {
    text-align: center;
    padding: 20px;
    margin-bottom:40px;
  }

  .gallery-images {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1170px;
    margin: 0 auto;
    gap: 20px;
     margin-bottom: 40px; 
  }

  .gallery-images img {
    width: 18%; /* Imazhet do të marrin 18% të gjerësisë së konteinerit */
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease; /* Lëvizja e imazhit me kalimin e mausit */
  border-radius: 10px;
  }
  .gallery-images img:hover {
  transform: scale(1.2); /* Zgjerimi i imazhit kur maus është mbi të */
}
/* Media Queries për Tablet */
  @media screen and (max-width: 1024px) {
    .six-images-section {
      grid-template-columns: repeat(4, 1fr); /* 4 kolona në tablet */
    }
  }

  /* Media Queries për Mobile */
  @media screen and (max-width: 767px) {
    .six-images-section {
      grid-template-columns: repeat(2, 1fr); /* 2 kolona në mobile */
    }
  }

  /* Media Queries për Mobile të vogël */
  @media screen and (max-width: 480px) {
    .six-images-section {
      grid-template-columns: repeat(1, 1fr); /* 1 kolonë në mobile të vogël */
      justify-items: center; /* Qendron imazhet në mes të qelizave */
    }
  }
</style>
