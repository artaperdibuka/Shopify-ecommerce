{% schema %}
{
  "name": "Custom Collections",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "text_left",
      "label": "Left Text",
      "default": "Left Text"
    },
    {
      "type": "url",
      "id": "link_left",
      "label": "Left Link"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "text_right",
      "label": "Right Text",
      "default": "Right Text"
    },
    {
      "type": "url",
      "id": "link_right",
      "label": "Right Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-banner">
  <div class="banner-item">
    <img src="{{ section.settings.image_left | img_url: 'large' }}" alt="{{ section.settings.text_left }}">
    <div class="overlay-text">
      <h2>{{ section.settings.text_left }}</h2>
      <a href="{{ section.settings.link_left }}" class="text-button">Shop Now</a>
    </div>
  </div>
  <div class="banner-item">
    <img src="{{ section.settings.image_right | img_url: 'large' }}" alt="{{ section.settings.text_right }}">
    <div class="overlay-text">
      <h2>{{ section.settings.text_right }}</h2>
      <a href="{{ section.settings.link_right }}" class="text-button">Shop Now</a>
    </div>
  </div>
</div>
<style>
  .custom-banner {
    display: flex;
    justify-content: space-between; 
    align-items: center;
    padding: 0; 
    margin: 0; 
    width: 100%; 
    gap:20px;
    margin-bottom: 40px; 
  }
  
  .banner-item {
    width: 50%; 
    position: relative;
    
  }
  
  .banner-item img {
    width: 100%;
    object-fit: cover; 
  }
  
  .overlay-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
  }
  
  .text-button {
    
    display: inline-block;
    margin-top: 10px;
    font-size: max(15px, 1.3vw);
    color: white;
    text-decoration: underline;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }
  
  .text-button:hover {
    color: #D3D3D3;
  }
  
  .overlay-text h2 {
    font-size: max(16px, 2vw);
    margin: 0;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

</style>